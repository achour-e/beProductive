<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".match.LonelyUser"
    android:background="@drawable/lonely_bgg"
    android:orientation="vertical">
    <TextView
        android:layout_width="279dp"
        android:layout_height="90dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="We currently can't find you a match"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />
    <Button
        android:id="@+id/continue_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="continue"
        android:textColor="@color/black"
        app:backgroundTint="@color/teal_200"
        android:height="75dp"
        />
    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:height="75dp"
        android:text="Change goal"
        android:elevation="3dp"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/damion"
        android:text="You can change your goal later"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />
</LinearLayout>